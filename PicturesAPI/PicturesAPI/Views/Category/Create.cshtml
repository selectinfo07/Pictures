@model PicturesAPI.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("create", "Category", FormMethod.Post, new { enctype = "multipart/form-data", @class="form-signin" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CATEGORy</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="">
            @Html.TextBoxFor(model => model.Name, new { @class="form-control"})
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageUrl)
        </div>
        <div class="editor-field">
             <input type="file" id="ImageUrl" name="ImageUrl" class="form-control" />
           
            @Html.ValidationMessageFor(model => model.ImageUrl)
        </div>

        <p>
            <input type="submit" value="Create" class="btn btn-lg btn-primary btn-block" style="margin-top:10px" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
